{
  "name": "@twick/2d",
  "version": "0.15.13",
  "description": "A 2D renderer for twick",
  "author": "twick",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./editor": {
      "types": "./editor/index.d.ts",
      "import": "./editor/index.js",
      "default": "./editor/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lib/jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./lib/jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js",
      "require": "./dist/jsx-dev-runtime.cjs"
    }
  },
  "sideEffects": false,
  "typesVersions": {
    "*": {
      "jsx-runtime": [
        "./dist/jsx-runtime.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "editor",
    "tsconfig.project.json"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "npm run build-lib && npm run build-editor && npm run build:jsx-runtime",
    "build-lib": "tsup",
    "build-editor": "tsup --config tsup.editor.config.ts",
    "build:jsx-runtime": "node -e \"const fs = require('fs'); fs.writeFileSync('dist/jsx-runtime.d.ts', 'export * from \\\"./index.js\\\";'); fs.writeFileSync('dist/jsx-runtime.d.mts', 'export * from \\\"./index.mjs\\\";');\"",
    "test": "vitest"
  },
  "dependencies": {
    "@codemirror/language": "^6.10.1",
    "@lezer/common": "^1.2.1",
    "@lezer/highlight": "^1.2.0",
    "@rive-app/canvas-advanced": "2.7.3",
    "@twick/core": "0.15.13",
    "code-fns": "^0.8.2",
    "hls.js": "^1.5.11",
    "mathjax-full": "^3.2.2",
    "mp4box": "^0.5.2",
    "parse-svg-path": "^0.1.2"
  },
  "devDependencies": {
    "@preact/signals": "^1.2.1",
    "@rollup/plugin-node-resolve": "^15.2.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@twick/ui": "0.15.13",
    "clsx": "^2.0.0",
    "jsdom": "^22.1.0",
    "preact": "^10.19.2",
    "rollup-plugin-postcss": "^4.0.2",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ncounterspecialist/twick-base.git"
  },
  "bugs": "https://github.com/ncounterspecialist/twick-base/issues"
}
